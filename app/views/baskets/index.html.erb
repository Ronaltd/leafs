<div class="container-fluid">
  <div class="card-company">
    <h1 class="mt-3">Meus Cupons</h1>
    <div class="d-flex justify-content-center">
      <table class="content-table">
        <thead>
            <tr>
            </tr>
        </thead>
        <% @coupons.each do |coupon| %>
        <tbody>
          <tr>
            <td><%=image_tag "#{ @companies.find(coupon.company_id).logo}", size: "100x100", class: "img-table rounded-circle mr-1" %></td>
            <td><span class="mb-5 mr-1"><%= coupon.discount %></span></td>
            <td><span class="cupom"><strong><i class="fas fa-ticket-alt"></i><%= coupon.code %></strong></span></td>
            <td><%= link_to "Site", @companies.find(coupon.company_id).url, class: 'button-transparent ml-2 h6', target: "_blank" %></td>
          </tr>
        </tbody>
        <%end%>
      </table>
    </div>
    <div class="container">
      <div class="table-leafs mt-4 p-4">
        <h3 class="mb-4">Cupons Resgatados</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Leafs debitados</th>
              <th scope="col">CÃ³digo</th>
              <th scope="col">Data</th>
            </tr>
          </thead>
          <tbody>
            <% @baskets.each do |basket| %>
              <tr>
                <td><i class="fab fa-envira green mr-1"></i><%= basket.debit %></td>
                <td><%= basket.coupon.code %></td>
                <td><%= basket.created_at.strftime('%d/%m/%Y')%></td>
              </tr>
            <%end%>
          </tbody>
        </table>   
        <%= link_to "Adquirir novo Cupom", coupons_path, class: "button-green my-3" %>
      </div>
    </div>
  </div>  
</div>   
