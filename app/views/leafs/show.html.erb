<div class="container justify-content-center">
  <div class="card-company">
 
    <h2 class="mt-xl-5 mt-lg-5 mt-md-5 mt-sm-4 mt-4 mb-4" style="font-size: 28px; font-family: 'Roboto Slab', serif; text-decoration: none">Solicitação de LEAFS <i class="fab fa-envira green text-center"></i> </h2>
 
    <div class="d-flex justify-content-center">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="font-size: 18px; font-family: 'Roboto Slab', serif; text-decoration: none"><%= @leaf.accepted ? "Valor Creditado" : "Valor Calculado"  %></th>
            <th scope="col" style="font-size: 18px; font-family: 'Roboto Slab', serif; text-decoration: none">Status</th>
            <th scope="col" style="font-size: 18px; font-family: 'Roboto Slab', serif; text-decoration: none">Ponto de Coleta</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row" style="font-size: 16px; font-family: 'Noto Sans JP', sans-serif; text-decoration: none"><i class="fab fa-envira green mr-1"></i><%= @leaf.credit %></td>
            <td style="font-size: 16px; font-family: 'Noto Sans JP', sans-serif; text-decoration: none"><%= @leaf.accepted ? "Aprovado" : "Pendente"  %></td>
            <td style="font-size: 16px; font-family: 'Noto Sans JP', sans-serif; text-decoration: none"><%= @leaf.dropoff ? @leaf.dropoff.name : "Pendente" %></td>
          </tr>
        </tbody>
      </table>
    </div>
 
    <h4 class="mt-5 mb-3 text-center" style="font-size: 20px; font-family: 'Noto Sans JP', sans-serif; text-decoration: none">A Natureza agradece! Material para reciclagem:</h4>
 
    <ul class="list-group">
      <% @leaf.items.each do |item| %>
        <li class="list-group-item" style="font-size: 16px; font-family: 'Noto Sans JP', sans-serif; text-decoration: none"> <%= "#{item.amount}kg - #{item.item_type}" %> </li>
      <% end %>
    </ul>
 
    <div class="mt-5">
      <%= link_to "Meus Leafs", leafs_path, class: 'button-green mt-4' %>
    </div>
  </div>
</div>
