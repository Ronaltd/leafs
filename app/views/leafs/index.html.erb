<!--BANNER DA PÁGINA DO USUÁRIO-->
<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.nestle.com/sites/default/files/styles/da_vinci_header_hero_desktop/public/2021-03/csv20-ff6w3z-safeguarding-the-environment.jpg?h=b8626526&itok=yQPv3mQl);">
  <div class="container text-center mt-5">
    <h3>Você contribuiu reciclando ____ KG de lixo com a Leafs!! </h3>
  </div>
</div>

<!--Restante do Profile-->
<div class='container p-3'>
  <!--Saldo-->
  <div class="d-flex flex-row justify-content-start  mt-4">
    <div class="col-12 col-md-12 col-lg-12 shadow bg-white p-3 mb-2 rounded mr-3">
      <div class="">
        <%= cl_image_tag current_user.photo.key, height: 100, width: 100, crop: :thumb, gravity: :face, class:"rounded-circle" %>
        <h4>Bem-vindo, <%= current_user.first_name %> <%= current_user.last_name %></h4>
        <h4>Saldo:  <%= current_user.leafs_balance %></h4>
        <!--Inserir aqui If e Else para fazer a conta do saldo-->
      </div>
    </div>
  </div>

    <!--Extrato-->
  <div class="  col-10 col-md-6 col-lg-3 shadow bg-white p-3 mb-2 rounded ">

  </div>

  


  <% @leafs.each do |leaf| %>
  <% if leaf.user == current_user %>
    <div>
        <%= link_to leaf_path(leaf.id) do %>
        <p>Leafs creditados: <%= leaf.credit %> em <%= leaf.created_at.strftime('%d/%m/%Y')
    %></p>
        <% end %>
      </div>
  <%end%>
  <%end%>

  <div>
  <p>Cupons utilizados</p>
  <% @baskets.each do |basket| %>
    <div>
      <%= link_to baskets_path do %>
        <p>Leafs debitados: <%= basket.debit %> em <%= basket.created_at.strftime('%d/%m/%Y') %></p>
      <% end %>
    </div>
  <%end%>
  </div>

  <%= link_to "Novo Leaf", new_leaf_path %>
</div>
