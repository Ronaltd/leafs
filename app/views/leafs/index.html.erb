<div class='card-company'>
  <h2>Meus Leafs</h2>

  <h4>Saldo:  <%= current_user.leafs_balance %></h4>

  <% @leafs.each do |leaf| %>
  <div>
      <%= link_to leaf_path(leaf.id) do %>
      <p>Leafs creditados: <%= leaf.credit %> em <%= leaf.created_at.strftime('%d/%m/%Y')
  %></p> 
      <% end %>
    </div>
  <%end%>

  <div>
  <p>Cupons utilizados</p>
  <% @baskets.each do |basket| %>
    <div>
      <%= link_to baskets_path do %>
        <p>Leafs debitados: <%= basket.debit %> em <%= basket.created_at.strftime('%d/%m/%Y') %></p>
      <% end %>
    </div>
  <%end%>
  </div>

  <%= link_to "Novo Leaf", new_leaf_path %>
</div>