<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-interval="3000" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.5)), url(https://www.incimages.com/uploaded_files/image/1920x1080/getty_637583458_347721.jpg);">
      <div class="d-flex h-100 align-items-center justify-content-center">
        <div class="banner">
          <h1></h1>
          <p>
           <% total = 0%>
            <% leafs.each do |leaf| %>
              <% if leaf.accepted %>
                <% leaf.items.each do |item| %>
                  <% total += item.amount %>
                <% end %>
              <% end %>
            <% end %>
            <span id='counter-rec' style="display: none;"><%= total %></span>
            <h1><span id="number-change">0</span> toneladas</h1>
            <p>De lixo reciclado através do nosso app.</p>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

